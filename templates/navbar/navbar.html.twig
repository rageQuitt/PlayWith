{% extends 'base.html.twig' %}

{% block title %} NavBar!{% endblock %}

{% block header %}
<header class="p-3 text-bg-dark">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a href="{{url('homepage')}}" class="nav-link px-2 text-secondary">Accueil</a></li>
                <li><a href="{{ url('app_blog') }}" class="nav-link px-2 text-white">Blog</a></li>
                <li><a href="{{url('products_list')}}" class="nav-link px-2 text-white">Produits</a></li>
                <li><a href="" class="nav-link px-2 text-white">Contact</a></li>
                <li><a href="{{url('a_propos')}}" class="nav-link px-2 text-white">À Propos</a></li>
            </ul>

            {% if app.user %}
                <!-- Si l'utilisateur est connecté, afficher une icône de profil. -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">                        
                         <img src="" alt="Photo de profil" id="photoDeProfil" class="rounded-circle" style="width: 50px; height: 50px;">
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="userDropdown">   
                    <li><a class="dropdown-item" href="#">Cart</a></li>
                    <li><a class="dropdown-item" href="{{path('app_logout')}}">Logout</a></li>
                </li>
            {% else %}
                <!-- Sinon, afficher les boutons de connexion et d'inscription. -->
                <li class="nav-item">
                    <a href="{{ path('app_login') }}"><button type="button" class="btn btn-outline-light me-2 loginButton">Connexion</button></a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_register') }}"><button type="button" class="btn btn-light loginButton">Inscription</button></a>
                </li>
            {% endif %}
        </div>
    </div>
</header>

{% endblock header %}
