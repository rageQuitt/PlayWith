<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}" />
      
        {% if app.debug %}
        <link rel="stylesheet" href="{{ asset('bundles/webprofiler/css/toolbar.css') }}">
        {% endif %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{asset('assets/css/bootstrap.min.css')}}">
        {% endblock %}
    </head>
    <body>
        {% block body %}
  <header class="p-3 text-bg-dark">
    <nav class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
            </a>
            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a href="{{url('homepage')}}" class="nav-link px-2 text-secondary">Accueil</a></li>
                <li><a href="{{ url('app_blog') }}" class="nav-link px-2 text-white">Blog</a></li>
                <li><a href="{{url('products_list')}}" class="nav-link px-2 text-white">Produits</a></li>
                <li><a href="{{url('contact')}}" class="nav-link px-2 text-white">Contact</a></li>
                <li><a href="{{url('a_propos')}}" class="nav-link px-2 text-white">À Propos</a></li>
            </ul>

            {% if app.user %}
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">                        
                    <img src="" alt="Photo de profil" id="photoDeProfil" class="rounded-circle" style="width: 50px; height: 50px;">
                </a>
                <ul class="dropdown-menu" aria-labelledby="userDropdown">   
                    {% if 'ROLE_ADMIN' in app.user.roles %}
                        <li><a class="dropdown-item" href="{{ path('admin') }}">Tableau de bord</a></li>
                        <li><a class="dropdown-item" href="{{ path('cart_cart_index') }}">Panier</a></li>

                        <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
                    {% else %}
                        <li><a class="dropdown-item" href="{{ path('order_confirmation') }}">Panier</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
                    {% endif %}
                </ul>
            </li>
        {% else %}
            <!-- Sinon, afficher les boutons de connexion et d'inscription. -->
            <li class="nav-item">
                <a href="{{ path('app_login') }}"><button type="button" class="btn btn-outline-light me-2 loginButton">Connexion</button></a>
            </li>
            <li class="nav-item">
                <a href="{{ path('app_register') }}"><button type="button" class="btn btn-light loginButton">Inscription</button></a>
            </li>
        {% endif %}

        </div>
    </nav>
</header>

        {% block content %}{% endblock %}

  <footer class='bg-dark text-center text-lg-start text-white'>
    <div class="container p-4 pb-0">
      <section class="">
